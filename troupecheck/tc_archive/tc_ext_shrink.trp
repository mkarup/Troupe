                        val new_idx = if interim.curr < 1 then 1 else interim.curr
                        val _ = print new_idx
                        val _ = print ls
                        val new_pick = nth ls new_idx
                    in {state = interim.state, curr = new_pick, prev = inst.curr, idx = new_idx, prev_idx = raw}
                    end
                | _ =>  
                    if inst.idx = 1 then {inst with state = "done"} 
                    else
                        let val interim = shrinker {state = inst.state, curr = inst.idx, prev = inst.prev_idx}
                            val new_idx = if interim.curr < 1 then 1 else interim.curr
